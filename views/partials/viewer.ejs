<div class="game-viewer" id="<%= id %>">
    <div class="game-canvas">
        <div class="col-md-12 game-canvas-container">
            <canvas width="<%= canvasWidth %>" height="<%= canvasHeight %>"></canvas>
        </div>
        <div class="game-navigator col-md-12">
            <div class="game-navigator-buttons col-md-4">
                    <button class="btn btn-default disabled play-backward fa fa-backward"></button>
                    <button class="btn btn-default disabled play fa fa-play"></button>
                    <button class="btn btn-default disabled play-forward fa fa-forward"></button>
            </div>
            <div class="game-current-turn disabled text-center col-md-6">
                Current turn: 
                <span class="game-current-turn-number"></span>
            </div>
        </div>
    </div>
</div>