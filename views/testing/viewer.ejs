<script src="/API/AnimationAPI.js"></script>
<script src="/API/Viewer.js"></script>
<script>
    function initAnimation(history) {
        setAnimationSpeed(1000);
    }

    function sign(nr) {
        if (nr == -1) return "";
        if (nr == 0) return "O";
        if (nr == 1) return "X";
    }

    function drawFrame(data) {
        var ctx = getCanvas();
        ctx.fillStyle = "red";
        ctx.fillRect(0,0,300,300);
        ctx.fillStyle = "black";
        ctx.font = "100px Arial";
        for (var i =0; i<3; i++) {
            for (var j=0; j<3; j++) {
                ctx.fillText(sign(data.description.board[i][j]), j*100, (i+1)*100);
            }
        }
    }
</script>
