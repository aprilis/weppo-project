<%- include('partials/head.ejs', { title: 'Login' }) %>
<%- include('partials/alert.ejs') %>
<%- include('partials/home-menu.ejs') %>



<header>
    <h1 class="text-center">Welcome to BotPlatform!</h1>
</header>

<form method="post" action="/Login" class="form-login">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <input type="email" name="email" class="form-control" placeholder="Email" required autofocus>
                <input type="password" name="password" class="form-control" placeholder="Password" required>
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login" >
            </div>
            <a href="/signup" class="text-center new-account">Create an account </a>
        </div>
    </div>
    
</form>

<%- include('partials/end.ejs') %>